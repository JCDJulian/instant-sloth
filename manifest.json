{
	"manifest_version": 2,

	"name" : "Instant Sloth",
	"description": "One button, many sloth.",
	"version": "1",

	"permissions": [
		"https://secure.flickr.com/"
	],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"js": ["jquery.min.js", "tab.js", "jquery-ui.min.js"],
		"matches": ["http://*/*", "https://*/*"]
		}]
}